import java.util.ArrayList;


public class Morpion {
	//ATTRIBUTES
	private int[] tab;
	
	
	//METHODS
	public Morpion(){
		this.tab = new int[9];
		for(int i = 0; i < 9; i ++){
				tab[i] = 0;
		}
	}
	
	public Morpion(int[] t){
		this.tab = t;
	}
	
	public int[] getTab(){
		return this.tab;
	}
	
	public void heuristic(int value, int place){
